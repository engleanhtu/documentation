#HuongDanCaiDatThuVienPythonTrenUbuntu

#CaiDatGoogleChrome
wget https://dl.google.com/linux/direct/google-chrome-stable_current_amd64.deb
sudo apt-get install -f
sudo dpkg -i --force-depends google-chrome-stable_current_amd64.deb

#CaiDatPycharmCommunity
sudo add-apt-repository ppa:mystic-mirage/pycharm
sudo apt-get update
sudo apt-get install pycharm-community

#InstallPip3
sudo python3 get-pip.py
sudo apt-get install python3.5 python3.5-dev
sudo apt-get -y install python3.pip

==> CHU Y NEU CAI DAT CAC THU VIEN DUOI KO DC THI THEM sudo truoc pip3
#InstallOpenCVLib
pip3 install opencv-python

#InstallTensorFlowLib
pip3 install tensorflow

#InstallCacThuVienKhac
pip3 install scipy
pip3 install scikit-learn
pip3 install matplotlib
sudo apt-get install python3.5-tk

#InstallTheanoLib
pip3 install Theano

#InstallTensorpack
git clone https://github.com/ppwwyyxx/tensorpack
pip3 install --user -r tensorpack/requirements.txt
pip3 install -U git+https://github.com/ppwwyyxx/tensorpack.git

#InstallPygame
pip3 install pygame

#InstallSimpleCV
pip3 install simplecv

#[Errno 2] No such file or directory: 'ffmpeg'
sudo apt-get install libav-tools
